.single-tile
	.tile
		= image_tag @artist.profile_picture.url(:large), class: 'glitch'
		.info.mf-row
			%h1.artist-name= @artist.name
			.artist-event
				Playing at:
				- event = @artist.events.first
				%h1.artist-event= event.title
				.location
					= link_to event.location.name, static_page_path(1, locale: I18n.locale)
					= schedule_for(event)
.artist-desc.mf-row
	.bio
		= @artist.biography.html_safe
	.sidebar
		- if !@links.empty?
			%ul.links
				- @links.each do |l|
					= link_to l.text_to_show, l.url, target: "_blank"
		= mf_auto_html(@artist.sidebar_media)
%div.back_to_all= link_to 'Back to all artists', artists_path
