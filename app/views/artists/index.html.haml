.grid.artists-list{data: {url: 'admin/artists/sort'}}
	- @artists.each do |artist|
		- event = artist.events.first
		- type = event.category.blank? ? t("events.types.#{event.type}") : t("events.categories.#{event.category}") unless event.blank?
		- classes = "#{event.category}" unless event.blank?
		.grid-item.mix.artist{class: classes, data: {position: artist.position, id: artist.id}}
			- path = artist_path(artist, locale: I18n.locale)
			= link_to path do
				= image_tag artist.profile_picture.url(:tile)
				.info
					- content_for(:filters) do
						%h4.type= type unless type.blank?
						%h3.artist-name
							= artist.name
						.artists= event.title unless event.blank?
