#filters
	.cat-filters
		- Event.type_enum.each do |type|
			- if type != :single_event
				%input.cat-filter{:type => "checkbox", value: type, id: "category-#{type}", checked: true} 
					%label{:for => "category-#{type}"}= t("events.types.#{type}")
		- Event.category_enum.each do |cat|
			%input.cat-filter{:type => "checkbox", value: cat, id: "category-#{cat}", checked: true} 
				%label{:for => "category-#{cat}"}= t("events.categories.#{cat}")
%ul.grid-3-col.artists-list.sortable-list
	- @artists.each do |artist|
		- event = artist.events.first
		- type = event.category.blank? ? t("events.types.#{event.type}") : t("events.categories.#{event.category}") unless event.blank?
		- classes = "#{event.category} #{event.type}" unless event.blank?
		%li.mix.artist{class: classes, data: {position: artist.id}}
			- path = artist_path(artist, locale: I18n.locale)
			= link_to path do
				.tile
					= image_tag artist.profile_picture.url(:tile), width: 600, height: 270, class: 'glitch'
					.info
						%h2.type= type unless type.blank?	
						%h1.artist-name
							= artist.name
						%h2.event-title= event.title unless event.blank?	
						.location
							= schedule_for(event) unless event.blank?
							= event.location.name unless event.blank?