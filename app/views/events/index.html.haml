%ul.grid-3-col
	- @events.each do |event|
		%li.mix.event{data: {position: event.id}}
			- path = event.type == 'workshop' ? workshop_path(event, locale: I18n.locale) : exhibition_path(event, locale: I18n.locale)
			= link_to path do 
				.tile
					= image_tag event.main_image.url(:tile), width: 600, height: 270,class: 'glitch'
					.info
						.type
							= t("events.types.#{event.type}")
						%h2.event-title= event.title
						.location
							#{l(event.schedule_start, format: "%e")} - #{l(event.schedule_end, format: "%e %B")} &mdash; #{event.location.name}
							