- cache([@sections, @venues, @days_range, @artists_by_letter]) do
	.filters
		.filters-by
			.filter-title.favourite{ data: { type: 'event', key: 'id' } }= fa_icon('star')
			.filter-title.active{ data: { type: 'event', key: 'section', value: 'reset'} } Events By Type
			%ul.filter-list.section
				- @sections.each do |sec|
					%li.section.active{ data: { type: 'event', key: 'section', value: sec}}= sec
		.filters-by
			.filter-title{ data: { type: 'event', key: 'date', value: 'reset'} } Events By Day
			%ul.filter-list.date.collapsed
				- @days_range.each do |day|
					%li.day.active{ data: { type: 'event', key: 'date', value: "#{day}-5"}}= day
		.filters-by
			.filter-title{ data: { type: 'event', key: 'venue', value: 'reset'} } Events By Venue
			%ul.filter-list.venue.collapsed
				- @venues.each do |venue|
					%li.venue.active{ data: { type: 'event', key: 'venue', value: venue.name}}= venue.name
		.filters-by
			.filter-title{ data: { type: 'artist', key: 'artists', value: 'reset'} } Artists
			%ul.filter-list.artists.collapsed
				- @artists_by_letter.each do |letter|
					%li.letter.active{ data: { type: 'artist',  key: 'letter', value: letter} }= letter
