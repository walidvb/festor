%ul.locales{"data-turbolinks" => "false"}
	- if I18n.locale == :fr
		%li.locale
			#{link_to("EN", url_for(locale: :en), class: "en", "data-lang" => :en)}
			%span.current-locale= "/ FR"
	- else
		%li.locale
			%span.current-locale EN
			= "/"
			#{link_to("FR", url_for(locale: :fr), class: "fr", "data-lang" => :fr)}
